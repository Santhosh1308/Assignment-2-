#  star triangle pattern
def triangle(b):
     
    
    a = b - 1
 
    for i in range(0, b):
        
        for j in range(0, a):
            print(end=" ")
         
        a = a - 1
           
        for j in range(0, i+1):
         
                       print("* ", end="")
           
        print("\r")
 

b = 5
triangle(b)
------------------------------------------------------
